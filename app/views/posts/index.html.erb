<h1>Noticias</h1>

<%= link_to 'New Post', new_post_path, class:'btn btn-secondary mb-3' %>

<div class="card-deck">
  <% @posts.each do |post| %>
    <div class="col-sm-12 col-md-6 col-lg-4">
      <div class="card">
        <img src="<%= post.photo.postimg%>" class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title"><%= post.title %></h5>
          <p class="card-text"><%= post.description %></p>
          <div class="btn-group" role="group" aria-label="Basic example">
            <div><%= link_to 'Show', post, class:'btn btn-secondary'%></div>
            <div><%= link_to 'Edit', edit_post_path(post), class:'btn btn-secondary' %></div>
            <div><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-secondary' %></div>
          </div>
          <p class="card-text">
            <small class="text-muted"><%=time_ago_in_words(post.created_at) %></small>
          </p>
        </div>
      </div>
    </div>
  <% end %>
</div>

<br>
